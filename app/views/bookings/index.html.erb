<div class="container mt-5">
  <h1> Dashboard </h1>
  <hr>
  <% if current_user.admin %>
    <% @bookings.each do |booking| %>
      <div class="card-booking">
        <%= image_tag "van-placeholder.jpg" %>
        <div class="card-booking-info">
          <p>
            <strong><%= booking.truck.title %></strong>, owner: <%= booking.truck.user.email %><br>
            Booked by: <%= booking.user.email %><br>
            Status: <%= booking.status %> 
          </p>
          <%= link_to "Delete", booking_path(booking), method: "delete", class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="d-flex justify-content-between">
  
      <% unless @bookings_as_customer.empty?  %>
        <div class="customer">
          <h3>Your reservations</h3>
          <% @bookings_as_customer.each do |booking| %>
            <div class="card-booking">
              <%= image_tag "van-placeholder.jpg" %>
              <div class="card-booking-info">
                <p>
                  <strong><%= booking.truck.title %></strong>, owned by: <%= booking.truck.user.email %><br>
                  Status: <%= booking.status %> 
                </p>
                <%= link_to "View", booking_path(booking), class: "btn btn-sm btn-success" %>
                <%= link_to "Edit", edit_booking_path(booking), class: "btn btn-sm btn-success" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
  
      <% unless @bookings_as_owner.empty?  %>
      <div class="owner">
        <h3>Your trucks' reservations</h3>
        <% @bookings_as_owner.each do |booking| %>
          <div class="card-booking">
             <%= image_tag "van-placeholder.jpg" %>
              <div class="card-booking-info">
                <p>
                  <strong><%= booking.truck.title %></strong>, booked by: <%= booking.user.email %><br>
                  Status: <%= booking.status %> 
                </p>
                <%= link_to "View", booking_path(booking), class: "btn btn-sm btn-success" %>
                <%= link_to "Confirm", edit_booking_path(booking), class: "btn btn-sm btn-success" %>
                <%= link_to "Cancel", edit_booking_path(booking), class: "btn btn-sm btn-warning" %>
              </div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  <% end %>
  <%= link_to 'Back' , trucks_path,class: "btn btn-outline-primary my-3" %>
</div>
