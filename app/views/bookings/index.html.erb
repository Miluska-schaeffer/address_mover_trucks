<div class="container">
  <h1> List of all reservations </h1>
  <hr>
  <% @bookings.each do |booking| %>
    <div class="card-product">
      <img src= <%="http://loremflickr.com/280/280/#{booking.truck.title}" %> />
        <div class="card-product-infos">
        <p>Vehicle Name :<strong> <%= booking.truck.title %> </strong><p>
        <p>Location : <%= booking.truck.location %><p>
        <p>Price p/day : â‚¬<%= booking.truck.price_per_day.to_f/100 %><p>
        <p>Size : <%= booking.truck.size %><p>
        <p>Description : <%= booking.truck.description %><p>
        <p>From : <%= booking.start_date.strftime('%d-%m-%Y') %> / To : <%= booking.end_date.strftime('%d-%m-%Y') %><p>
        <p>Status :<strong> <%= booking.status %></strong> <p>
      </div>
    </div>
  <% end %>
  <%= link_to 'Back' , trucks_path,class: "btn btn-secondary btn-sm mt-3 mb-3 float-left" %>
</div>
