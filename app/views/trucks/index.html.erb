<div class="container mt-5">
  <p>Check out the trucks up for rent around you!</p>
  <div class="content">
    <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV["MAPBOX_API_KEY"] %>">
  </div>
  <br>
  <br>
  <div>
    <%= form_tag trucks_path, method: :get do %>
    <%= text_field_tag :search,
    params[:search],
    class: "form-control",
      placeholder: "Search by brand, type, price or location"
      %>
      <br>
      <%= submit_tag "Search", class: "btn btn-lg btn-success" %>
      <% end %>
  </div>
    <div class="cards">
      <% @trucks.each do |truck| %>
      <div class="card-product">
       <%= cl_image_tag truck.photos.first.key, class: "card-img" %>
       <div class="card-product-infos">
        <h2><%= link_to truck.title, truck_path(truck) %></h2>
        <hr>
        <h3><strong><%= truck.location %> </strong></h3>
        <h3> â‚¬xDay : <%= truck.price_per_day.to_f / 100 %></h3>
        <h3> Size: <%= truck.size %></h3>
      </div>
    </div>
    <% end %>
  </div>
  <br>
  <div class="link">
    <%= link_to "Offer your truck", new_truck_path, class: "btn btn-success" %>
  </div>
</div>
</div>
