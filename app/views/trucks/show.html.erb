      <br>

      <div class="d-flex justify-content-center link">
        <% if policy(@truck).not_owner? || policy(@truck).user_is_admin? %>
          <%= link_to 'Book' , new_truck_booking_path(@truck, @bookings), class: "btn btn-primary btn-lg w-50" %>
        <% end %>
     </div>
   </div>

   <br>

   <div class="link">
    <%= link_to "Back to Search", trucks_path, class: "btn btn-success" %>
  </div>
</div>

